<div class="on_white">
<h1>Video Clip Browser</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>Speaker</th>
    <th>Description</th>
    <th>Url</th>
    <th>Filename</th>
	<th>Duration</th>
    <th>Featured</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.date %></td>
    <td><%= movie.speaker %></td>
    <td><%= movie.description %></td>
    <td><%= movie.url %></td>
    <td><%= movie.filename %></td>
	<td><%= movie.duration %></td>
    <td><%= movie.featured %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Movie', new_movie_path %>
</div>