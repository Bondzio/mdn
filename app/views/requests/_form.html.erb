<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_Name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_Name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email_Address %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :cellphone %><br />
    <%= f.text_field :cellphone %>
  </div>
  <div class="field">
    <%= f.label :church_Name %><br />
    <%= f.text_field :church %>
  </div>
  <div class="field">
    <%= f.label :Are_you_a_mens_leader_or_pastor? %><br />
    <%= f.check_box :leader, :value => true  %>
  </div>
  <div class="field">
    <%= f.label :address1 %><br />
    <%= f.text_field :address1 %>
  </div>
  <div class="field">
    <%= f.label :address2 %><br />
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.select :state, options_for_select(us_states) %>
  </div>
  <div class="field" id="state">
    <%= f.label :zip %><br />
    <%= f.text_field :zip, size: 10 %>
  </div>
  <div class="field" >
    <%= f.label :number_of_regular_church_attenders %><br />
    <%= f.text_field :size, size: 5 %>
  </div>
  <% if user_signed_in? %>
    <div class="field">
      <%= f.label :Request_has_been_fulfilled? %><br />
      <%= f.check_box :completed, :value => true  %>
    </div>
  <% end %>
<br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
