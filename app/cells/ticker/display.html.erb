<div>
<!-- this loop is necessary to iterate through the array passed in @streams -->
		<ul id="scroller" class="ticker">
		<% @streams.each do |stream| %>
		    <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="<%= stream.link %>", target=blank><%= stream.content %> .....</a></li>
		<% end %>
		</ul>
</div>
<script type="text/javascript">
(function($) {
	$(function() { //on DOM ready 
    		$("#scroller").simplyScroll({
							pauseOnHover: true,
							pauseOnTouch: true,
							frameRate: 30,
							speed: 2
						});
	});
 })(jQuery);
</script>
